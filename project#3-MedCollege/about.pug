      function showSlides(n) {
      let i;
      let slides = document.getElementsByClassName("about__slider-items");
      let controls = document.getElementsByClassName("slider__pagination");
      if (n > slides.length) {slideIndex = 1}
      if (n < 1) {slideIndex = slides.length}
      for (i = 0; i < slides.length; i++) {
      slides[i].style.display = "none";
      }
      for (i = 0; i < controls.length; i++) {
      controls[i].className = controls[i].className.replace(" slider__pagination--active", "");
      }
      slides[slideIndex-1].style.display = "block";
      controls[slideIndex-1].className += " slider__pagination--active";
      }
