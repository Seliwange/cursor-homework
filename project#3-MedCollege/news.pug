extends layout.pug

block content
    main.main
      section.news
        .wrapper
          .news__inner
            h1.news__title-main.news__title.title Новини
            .news__articles-main
              article.news__article.news__article-main
                picture
                  source(media='(max-width: 375px)', srcset='./assets/news_big1-mobile.jpg')
                  img.news__article-img-main(src='./assets/news-big1.jpg', width='572', alt='photo')
                .news__article-info-main
                  h4.news__article-title.title Нові можливості телемедицини для сімейних лікарів
                  p.news__article-desc На базі Львівський медичний фаховий коледж післядипломної освіти для сімейних лікарів провели тренінг, аби навчити медиків використовувати телемедицину у своїй роботі. У програмно-апаратний комплекс для телеметрії та телемедичного консультування входять портативний ЕКГ, вимірювач артеріального тиску, пульсоксиметр, спірометр, безконтактний термометр, дерматоскоп, цифрова оглядова камера та планшет для зберігання та передачі даних.
                  a.news__article-link(href='#') Читати більше
                    i.fas.fa-arrow-right
              article.news__article.news__article-main
